<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/banner_home"
        android:layout_width="415dp"
        android:layout_height="169dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <ImageView
        android:id="@+id/home_terdekat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_home"
        android:src="@drawable/ic_placeholder" />

    <ImageView
        android:id="@+id/ic_promo_home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toStartOf="@+id/ic_health_home"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/home_terdekat"
        app:layout_constraintTop_toBottomOf="@+id/banner_home"
        android:src="@drawable/ic_bubble" />

    <ImageView
        android:id="@+id/ic_health_home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_home"
        android:src="@drawable/ic_fruit" />

    <TextView
        android:id="@+id/tx_terdekat_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:text="Terdekat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_terdekat" />

    <TextView
        android:id="@+id/tx_promo_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="12dp"
        android:text="Promo"
        app:layout_constraintEnd_toStartOf="@+id/tx_health_home"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toEndOf="@+id/tx_terdekat_home"
        app:layout_constraintTop_toBottomOf="@+id/ic_promo_home" />

    <TextView
        android:id="@+id/tx_health_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="46dp"
        android:text="Healt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_health_home" />

    <ImageView
        android:id="@+id/ic_24_home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_terdekat_home"
        android:src="@drawable/ic_24_hours" />

    <ImageView
        android:id="@+id/ic_best_home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/ic_24_home"
        app:layout_constraintTop_toBottomOf="@+id/tx_promo_home"
        android:src="@drawable/ic_best_seller" />

    <TextView
        android:id="@+id/tx_24_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="12dp"
        android:text="24 Jam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_24_home" />

    <TextView
        android:id="@+id/tx_best_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="12dp"
        android:text="Terlaris"
        app:layout_constraintStart_toEndOf="@+id/tx_24_home"
        app:layout_constraintTop_toBottomOf="@+id/ic_best_home" />
</androidx.constraintlayout.widget.ConstraintLayout>